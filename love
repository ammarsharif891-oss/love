<script>
// DOM Elements
const btn = document.getElementById("startBtn");
const welcome = document.getElementById("welcome");
const surprise = document.getElementById("surprise");
const music = document.getElementById("bgMusic");
const loveBox = document.getElementById("loveBox");
const loveText = document.getElementById("loveText");
const musicBtn = document.getElementById("musicBtn");
const floatingHearts = document.getElementById("floatingHearts");
const proposalBtn = document.getElementById("proposalBtn");
const yesMsg = document.getElementById("yesMsg");

// Create floating hearts
function createFloatingHearts() {
  for (let i = 0; i < 30; i++) {
    setTimeout(() => {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.innerHTML = "‚ù§Ô∏è";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.fontSize = (Math.random() * 20 + 15) + "px";
      heart.style.animationDuration = (Math.random() * 10 + 10) + "s";
      heart.style.animationDelay = Math.random() * 5 + "s";
      floatingHearts.appendChild(heart);
      
      // Remove heart after animation completes
      setTimeout(() => {
        heart.remove();
      }, 15000);
    }, i * 300);
  }
}

// Start the page
btn.onclick = () => {
  welcome.style.display = "none";
  surprise.style.display = "block";
  
  // Start music with fade in
  music.volume = 0;
  music.play();
  let v = 0;
  let fade = setInterval(() => {
    v += 0.02;
    music.volume = v;
    if (v >= 0.5) clearInterval(fade);
  }, 100);
  
  // Create floating hearts
  createFloatingHearts();
  setInterval(createFloatingHearts, 15000);
  
  // Show love box with typing effect
  setTimeout(() => {
    loveBox.style.opacity = 1;
    typeText();
  }, 1500);
};

// Music button toggle
musicBtn.onclick = () => {
  if (music.paused) {
    music.play();
    musicBtn.innerHTML = '<i class="fas fa-music"></i>';
  } else {
    music.pause();
    musicBtn.innerHTML = '<i class="fas fa-play"></i>';
  }
};

// Love message to type
const msg = `My dearest Izba,

As we welcome 2025, I want you to know that my love for you grows stronger with each passing day. You are the most beautiful part of my life, my greatest joy, and my forever happiness.

With you, every moment is magical. Your smile lights up my world, your laugh is my favorite melody, and your love is the greatest gift I've ever received.

This new year, I renew my promise to cherish you, respect you, and love you more deeply than ever before. You are my everything.

Forever yours,
Ammar ‚ù§Ô∏è`;

// Typing effect for love message
function typeText() {
  let i = 0;
  loveText.innerHTML = "";
  let t = setInterval(() => {
    loveText.innerHTML += msg.charAt(i);
    i++;
    if (i >= msg.length) clearInterval(t);
  }, 20);
}

// Proposal button effect
proposalBtn.onclick = () => {
  yesMsg.style.display = "block";
  proposalBtn.style.display = "none";
  
  // Create heart explosion
  for (let i = 0; i < 80; i++) {
    setTimeout(() => {
      let h = document.createElement("div");
      h.innerHTML = i % 3 === 0 ? "üíñ" : i % 3 === 1 ? "üíï" : "üíù";
      h.style.position = "fixed";
      h.style.left = Math.random() * 100 + "vw";
      h.style.top = "80vh";
      h.style.fontSize = (Math.random() * 30 + 25) + "px";
      h.style.zIndex = "9999";
      h.style.pointerEvents = "none";
      document.body.appendChild(h);
      
      // Falling animation with random direction
      let x = (Math.random() - 0.5) * 200;
      let duration = Math.random() * 3 + 2;
      
      h.animate([
        { transform: `translate(0, 0) rotate(0deg)`, opacity: 1 },
        { transform: `translate(${x}px, -100vh) rotate(${Math.random() * 360}deg)`, opacity: 0 }
      ], {
        duration: duration * 1000,
        easing: "cubic-bezier(0.215, 0.61, 0.355, 1)"
      });
      
      // Remove element after animation
      setTimeout(() => {
        h.remove();
      }, duration * 1000);
    }, i * 50);
  }
  
  // Play romantic sound (if available)
  const romanticSound = new Audio('https://assets.mixkit.co/sfx/preview/mixkit-romantic-heartbeat-1152.mp3');
  romanticSound.volume = 0.3;
  romanticSound.play();
};

// Initialize floating hearts on welcome page
createFloatingHearts();
</script>

</body>
</html>
